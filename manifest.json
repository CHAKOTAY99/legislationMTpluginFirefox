{
  "manifest_version": 3,
  "name": "LegislationMT PDF Helper",
  "description": "Open Legislation.mt PDFs in new window via the extension button or ALT+P.",
  "version": "1.0.0",
  "action": {
    "default_icon": "images/gavel.png"
  },
  "icons": {
    "16": "images/gavel.png",
    "32": "images/gavel.png",
    "48": "images/gavel.png",
    "128": "images/gavel.png"
  },
  "background" : {
    "scripts": ["scripts/background.js"],
    "type": "module"
  },
  "permissions": ["activeTab", "scripting", "tabs"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+P",
        "mac": "Command+P"
      }
    }
  }
}